# Werco ERP Production Environment Configuration
# IMPORTANT: Change all values before deploying to production!

# ============================================================
# DATABASE CONFIGURATION
# ============================================================
# Production PostgreSQL database
DATABASE_URL=postgresql://werco_prod_user:CHANGE_THIS_PRODUCTION_DB_PASSWORD@localhost:5432/werco_prod

# ============================================================
# SECURITY CONFIGURATION
# ============================================================
# SECRET_KEY: MUST be changed! Generate with:
# python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=CHANGE_THIS_TO_A_STRONG_RANDOM_64_CHAR_KEY

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# ============================================================
# RATE LIMITING
# ============================================================
# Enable API rate limiting (recommended)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_TIMES=100
RATE_LIMIT_SECONDS=60
RATE_LIMIT_EXEMPT_PATHS=/health,/api/docs,/api/openapi.json,/api/redoc

# ============================================================
# APPLICATION SETTINGS
# ============================================================
APP_NAME=Werco ERP Production
DEBUG=false
ENVIRONMENT=production
API_V1_PREFIX=/api/v1

# ============================================================
# CORS CONFIGURATION
# ============================================================
# IMPORTANT: Change to your production domain
CORS_ORIGINS=https://werco-erp.yourdomain.com
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,Authorization,X-Requested-With

# ============================================================
# FILE STORAGE (AWS S3)
# ============================================================
# Required for document uploads
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_REGION=us-east-1
S3_BUCKET_NAME=werco-erp-documents-prod

# ============================================================
# MONITORING & LOGGING
# ============================================================
# Sentry error tracking (already configured)
SENTRY_DSN=https://00e08aba8c80210fe0a7e0e7f5e6769b@o4510660553080832.ingest.us.sentry.io/4510660577722368
LOG_LEVEL=WARN

# ============================================================
# REDIS CACHE (Optional but Recommended)
# ============================================================
# Enable Redis for caching and session management
REDIS_URL=redis://:REDIS_PASSWORD_HERE@localhost:6379/0

# ============================================================
# EMAIL CONFIGURATION
# ============================================================
# Required for password resets, notifications, etc.
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@werco-erp.com
SMTP_USE_TLS=true

# ============================================================
# LLM INTEGRATION (Optional)
# ============================================================
# For AI-powered features
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ============================================================
# ADDITIONAL SETTINGS
# ============================================================
# Timezone
TZ=America/New_York

# Maximum file upload size (in bytes)
MAX_UPLOAD_SIZE=52428800  # 50MB

# Session timeout (in minutes)
SESSION_TIMEOUT=60

# ============================================================
# CHECKLIST BEFORE LAUNCH
# ============================================================
# [ ] SECRET_KEY changed to strong random value
# [ ] DEBUG=false
# [ ] ENVIRONMENT=production
# [ ] DATABASE_URL points to production database
# [ ] Database has unique username/password
# [ ] CORS_ORIGINS set to production domain
# [ ] SMTP credentials configured
# [ ] S3 bucket created and configured
# [ ] Redis configured and tested
# [ ] SSL/HTTPS configured
# [ ] Rate limiting tested
# [ ] Sentry receiving errors
# [ ] Backup script verified
# [ ] All automated tests passing
# [ ] Load testing completed
# [ ] Security audit passed
# ============================================================
