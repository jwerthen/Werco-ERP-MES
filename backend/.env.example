# Werco ERP Environment Configuration
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/werco_erp

# Security - CHANGE THESE IN PRODUCTION
SECRET_KEY=change-this-to-a-random-string-at-least-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# Application
APP_NAME=Werco ERP
DEBUG=false
ENVIRONMENT=development

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# File Storage (S3-compatible for cloud deployment)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=werco-erp-documents
